<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12pt"
    android:layout_marginBottom="12pt"
    android:layout_marginStart="24pt"
    android:layout_marginEnd="24pt"
    android:background="@drawable/shape_rectangle_white_radius16"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle_blue_top_radius16"
        android:gravity="center"
        android:text="正在探视"
        android:textSize="20pt"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="96pt"
        android:textSize="30pt"
        android:padding="12pt"
        android:gravity="center"
        android:textColor="@color/black"
        tools:text="@string/app_name"

        app:layout_constraintTop_toBottomOf="@id/tv_status"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>