<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btn_request"
        android:drawableStart="@drawable/ic_hand"
        android:drawablePadding="20pt"
        android:text="请求探视"
        android:textSize="40pt"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="40pt"
        android:paddingEnd="40pt"
        android:paddingTop="30pt"
        android:paddingBottom="30pt"
        android:background="@drawable/shape_rectangle_white_radius60"
        android:layout_marginBottom="200pt"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <LinearLayout
        android:layout_width="1248pt"
        android:layout_height="540pt"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle_transparent_white_radius16"
        android:padding="48pt"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_request"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:drawableStart="@drawable/ic_tip"
            android:drawablePadding="18pt"
            android:text="探视须知"
            android:textSize="36pt"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="36pt"
            android:id="@+id/tv_tip"
            android:textSize="36pt"
            android:lineSpacingMultiplier="1.2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>